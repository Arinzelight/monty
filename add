#include "monty.h"

/**
 * f_add - adds the top two elements of the stack.
 * @head: stack head
 * @counter: line_number
 * Return: no return
 */
void f_add(stack_t **head, unsigned int counter)
{
    stack_t *current;  // Renamed 'aux' to 'current'
    int len = 0, aux;

    current = *head;
    while (current)
    {
        current = current->next;
        len++;
    }
    if (len < 2)
    {
        fprintf(stderr, "L%d: can't add, stack too short\n", counter);
        fclose(monty_state.file);  // Renamed 'bus' to 'monty_state'
        free(monty_state.content);  // Renamed 'bus' to 'monty_state'
        free_stack(*head);
        exit(EXIT_FAILURE);
    }
    current = *head;
    aux = current->n + current->next->n;
    current->next->n = aux;
    *head = current->next;
    free(current);
}

